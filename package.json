    "type": "git",
    "url": "git+https://github.com/eshedmargalit/paperaweek.git"
  },
  "bugs": {
    "url": "https://github.com/eshedmargalit/paperaweek/issues"
  },
  "homepage": "https://github.com/eshedmargalit/paperaweek#readme",
  "devDependencies": {
    "concurrently": "^6.2.1"
  }
}
